{{!
    @template local_assign_ai/review_modal
    Template for AI review modal body.

    Example context (json):
    {
        "message": "This is an example AI-generated review message.",
        "token": "exampletoken123",
        "savelabel": "Save",
        "saveapprovelabel": "Save and Approve"
    }
}}

<div class="local-assign-ai-modal">
    <textarea id="airesponse-edit" class="form-control" rows="8">{{{message}}}</textarea>

    <div class="ai-buttons mt-3">
        <button class="btn btn-success save-ai" data-courseid="{{courseid}}" data-cmid="{{cmid}}" data-userid="{{userid}}">
            {{savelabel}}
        </button>
        <button class="btn btn-primary approve-ai" data-courseid="{{courseid}}" data-cmid="{{cmid}}" data-userid="{{userid}}">
            {{saveapprovelabel}}
        </button>
    </div>
</div>

{{!
    @template local_assign_ai/review

    Template for AI review modal body.

    Context variables:
    - message: (string) AI-generated text
    - token: (string) Token for the submission
    - savelabel: (string) Label for the Save button
    - saveapprovelabel: (string) Label for the Save and Approve button
}}

<div class="local-assign-ai-modal">
    <textarea id="airesponse-edit" class="form-control" rows="8">{{{message}}}</textarea>

    <div class="ai-buttons">
        <button class="btn btn-success save-ai" data-token="{{token}}">{{savelabel}}</button>
        <button class="btn btn-primary approve-ai" data-token="{{token}}">{{saveapprovelabel}}</button>
    </div>
</div>
